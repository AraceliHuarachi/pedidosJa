                "required": [
                    "name",
                    "reference_price"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "reference_price": {
                        "type": "number",
                        "format": "float"
                    }
                },
                "type": "object"
            },
            "UserRequest": {
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "description": "Name of the user",
                        "type": "string",
                        "example": "John Doe"
                    }
                },
                "type": "object"
            },
            "ProductResource": {
                "properties": {
                    "id": {
